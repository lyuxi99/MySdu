<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.qr_code.QrCodeFragment">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/id_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="姓名" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/id_text_id_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="身份证号" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/id_button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存" />

    <ImageView
        android:id="@+id/id_img_qr_code"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"/>
    <ImageButton
        android:id="@+id/id_btn_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/CircleButtonStyle"
        android:src="@drawable/ic_question" />

</LinearLayout>